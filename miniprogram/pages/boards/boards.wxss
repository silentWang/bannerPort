/* pages/boards/boards.wxss */
.list_cls {
    width: 100%;
    height: 80vh;
    position: relative;
    margin: 1vh 0;
    white-space: nowrap;
}
.loading_cls {
    width: 100%;
    display: inline-block;
    text-align: center;
    color: #aaa;
    font-size: 25rpx;
}
.blank_cls {
    position: absolute;
    width: 260rpx;
    left: 245rpx;
    top: 48vh;
    font-size: 64rpx;
    color: #999;
    text-align: center;
}
.back_btn {
    position: absolute;
    right: 10rpx;
    bottom: 25rpx;
    font-size: 36rpx;
    border-radius: 50rpx;
    color: #fff;
    /* padding: 30rpx 0 0 15rpx; */
    width: 100rpx;
    height: 100rpx;
    background: rgba(0, 0, 0, 0.7);
    box-sizing: border-box;
    display: flex;
    justify-content: center;
    align-items: center;
}
.boardItem_cls {
    display: block;
    position: relative;
    margin: 20rpx 0 0 0;
}