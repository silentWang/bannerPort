/* pages/boarddiy/boardDIY.wxss */
.top_show_cls {
    display: block;
    width: 100%;
    height: 100%;
    position: fixed;
    left: 0;
    top: 0;
}
.bs_top_cls {
    width: 100%;
    height: 100%;
    position: relative;
    margin-bottom: 20rpx;
}
.bs_content_cls {
    width: 750rpx;
    height: 422rpx;
    margin: 0 auto;
    position: relative;
    overflow: hidden;
}
.bs_bg_cls {
    width: 100%;
    height: 100%;
    display: block;
}
.text_cls {
    position: absolute;
    display: block;
    flex-wrap: wrap;
    word-break: break-all;
    word-wrap:break-word;
    white-space:pre-line;
}
.icon_cls {
    position: absolute;
    display: block;
}
.edit_container_cls {
    width: 100%;
    height:calc(100% - 660rpx);
    white-space: nowrap;
    margin-top: 10rpx;
    border-top: 1px solid #eee;
}
.editbox_cls {
    display: flex;
    position: relative;
    flex-direction: column;
    padding: 0 10rpx 0 10rpx;
    top: 20rpx;
}
.editbox_btn_list_cls {
    width: 100%;
    display: flex;
}
.size_select_cls {
    display: inline-block;
    font-size: 16px;
    line-height: 2;
    padding: 0 .75em;
    width: auto;
    border: 1rpx solid #07c160;
    border-radius: 10rpx;
}
.editbox_btn_list_cls view {
    width: 150rpx;
    height: 50rpx;
    margin:10rpx;
    text-align: center;
    padding: 10rpx 0 0 0;
    border-radius: 10rpx;
    border: 1rpx solid #07c160;
    background: #7AC5CD;
}
.edit_box_item_cls {
    margin: 10rpx 0 10rpx 0;
    border-bottom: 1px solid #eee;
    padding: 10rpx 10rpx 25rpx 10rpx;
}
.edit_box_item_cls text {
    font-size: 36rpx;
    display: inline-block;
    margin-left: 20rpx;
}
.edit_box_item_cls input {
    width: 660rpx;
    font-size: 36rpx;
    height: 60rpx;
    border-bottom: 1px solid #999;
    text-align: left;
    margin: 5rpx 0 0 20rpx;
    padding: 0 10rpx;
}
.color_list_cls {
    display: block;
    width: 100%;
    white-space: nowrap;
}
.edit_box_item_cls radio {
    display: inline-block;
    width: 60rpx;
    height: 60rpx;
    margin: 10rpx;
    padding: 15rpx 0 0 15rpx;
    border-radius: 50%;
}

.edit_box_item_cls radio .wx-radio-input {
    border-radius: 50%;
    border: none;
    background: transparent;
}

.dialog_changetext_bg_cls {
    width: 100%;
    height: 100%;
    position: fixed;
    left: 0;
    top: 0;
    background-color: rgba(0, 0, 0, 0.7);
}
.dialog_changetext_cls {
    width: 700rpx;
    height: 480rpx;
    background-color: #fff;
    margin: 0 auto;
    position: relative;
    top: 320rpx;
}
.dialog_changetext_cls input {
    width: 540rpx;
    font-size: 48rpx;
    height: 100rpx;
    border: 1px solid #000;
    text-align: center;
    margin: 0 auto;
    position: inherit;
    top: 100rpx;
}
.dialog_changetext_cls view {
    display: flex;
    position: inherit;
    top: 200rpx;
}
.bs_diybutton_cls {
    margin: 20rpx 0 10rpx 0;
    padding-top: 40rpx;
}