<!--pages/components/headItem/HeadItem.wxml-->
<view>
    <view wx:if="{{!isLogin}}" class="userinfo_cls">
      <button wx:if="{{canIUseGetUserProfile}}" bindtap="getUserProfile">授权登录</button>
      <view wx:else> 请使用1.4.4及以上版本基础库 </view>
    </view>
    <view class="top_nav_cls">
      <view class="head_info_cls">
        <block wx:if="{{canIUseOpenData}}">
          <view class="userinfo_avatar_cls">
            <open-data type="userAvatarUrl"></open-data>
          </view>
          <view class="user_nickname_cls">
            <open-data type="userNickName"></open-data>
          </view>
        </block>
        <view class="times_info_cls">
          <text>{{myTimes}}</text>
        </view>
        <text class="get_times_cls" bindtap="getDIYTimes">获取次数</text>
      </view>
    </view>
    <block wx:if="{{showAlert}}">
      <view class="top_show_cls" bindtap="close">
        <view class="top_dialog_cls">
          <text class="h_label_cls">请输入淘宝订单号获取次数</text>
          <input class="h_input_cls" type="text" />
          <view class="bm_btn">确定</view>
        </view>
      </view>
    </block>
</view>
